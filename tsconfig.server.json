{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "target": "es2017",
    "lib": ["ES2020"],
    "isolatedModules": true,
    "declaration": false,
    "sourceMap": true,
    "inlineSources": true,
    "noEmit": false
  },
  "include": [
    "server/index.ts",
    "src/tracing",
    "src/metrics.ts",
    "src/constants.ts",
    "src/instrumentations/**/*",
    "src/utils/errorReporter/serverErrorReporter"
  ]
}
